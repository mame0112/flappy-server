	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.mame.lcom.LcomLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>create_account</servlet-name>
		<servlet-class>com.mame.lcom.LcomCreateAccountServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>create_account</servlet-name>
		<url-pattern>/create_account</url-pattern>
	</servlet-mapping>

		<servlet>
		<servlet-name>create_account_check_name</servlet-name>
		<servlet-class>com.mame.lcom.LcomUserNameCheckServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>create_account_check_name</servlet-name>
		<url-pattern>/create_account_check_name</url-pattern>
	</servlet-mapping>
		
	<servlet>
		<servlet-name>new_invitation</servlet-name>
		<servlet-class>com.mame.lcom.LcomNewInvitationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>new_invitation</servlet-name>
		<url-pattern>/new_invitation</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>new_invitation_confirmed</servlet-name>
		<servlet-class>com.mame.lcom.LcomSendConfirmMessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>new_invitation_confirmed</servlet-name>
		<url-pattern>/new_invitation_confirmed</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>new_message</servlet-name>
		<servlet-class>com.mame.lcom.LcomNewMessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>new_message</servlet-name>
		<url-pattern>/new_message</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>send_add_message</servlet-name>
		<servlet-class>com.mame.lcom.LcomSendAndAddMessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>send_add_message</servlet-name>
		<url-pattern>/send_add_message</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>conversation_data</servlet-name>
		<servlet-class>com.mame.lcom.LcomRequestConversationServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>conversation_data</servlet-name>
		<url-pattern>/conversation_data</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>friend_thumbnails</servlet-name>
		<servlet-class>com.mame.lcom.LcomRequestFriendsThumbnailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>friend_thumbnails</servlet-name>
		<url-pattern>/friend_thumbnails</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>message_push</servlet-name>
		<servlet-class>com.mame.lcom.LcomMessagePushServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>message_push</servlet-name>
		<url-pattern>/message_push</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>messageclean</servlet-name>
		<servlet-class>com.mame.lcom.LcomCleanOldMessagesServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>messageclean</servlet-name>
		<url-pattern>/cron/cleanmessage</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>debug_servlet</servlet-name>
		<servlet-class>com.mame.lcom.LcomDebugServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>debug_servlet</servlet-name>
		<url-pattern>/debug_servlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>_ah_sessioncleanup</servlet-name>
		<servlet-class>com.google.apphosting.utils.servlet.SessionCleanupServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>_ah_sessioncleanup</servlet-name>
		<url-pattern>/_ah/sessioncleanup</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>session-cleanup</web-resource-name>
			<url-pattern>/_ah/sessioncleanup</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	<servlet>
    <servlet-name>appstats</servlet-name>
    <servlet-class>
        com.google.appengine.tools.appstats.AppstatsServlet
    </servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>appstats</servlet-name>
    <url-pattern>/appstats/*</url-pattern>
</servlet-mapping>

<security-constraint>
    <web-resource-collection>
        <url-pattern>/appstats/*</url-pattern>
    </web-resource-collection>
    <web-resource-collection>
        <url-pattern>/cron/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>admin</role-name>
    </auth-constraint>
</security-constraint>

<filter>
   <filter-name>appstats</filter-name>
   <filter-class>
     com.google.appengine.tools.appstats.AppstatsFilter
   </filter-class>
   <init-param>
      <param-name>logMessage</param-name>
      <param-value>Appstats available: /appstats/details?time={ID}</param-value>
   </init-param>
</filter>
<filter-mapping>
   <filter-name>appstats</filter-name>
   <url-pattern>/*</url-pattern>
</filter-mapping>
	
	<precompilation-enabled>true</precompilation-enabled>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
